<!DOCTYPE html>
<html>
<head>
  <title>FB Bot Web</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>FB Bot Control Panel</h1>

  <form action="/login" method="post">
    <input type="text" name="name" placeholder="Enter your name" required>
    <textarea name="cookie" placeholder="Paste your appstate.json here" required></textarea>
    <button type="submit">Save & Login</button>
  </form>

  <h2>All Users</h2>
  <ul>
    <% users.forEach(user => { %>
      <li><b><%= user.name %></b> - <%= user.time %></li>
    <% }) %>
  </ul>
</body>
</html>
